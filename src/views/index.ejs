<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Document</title>
</head>
<body>
    <%- include("./nav")  %>
    <div class="messages">
        <% messages.map((msg, index) => { %>
            <div class="index-msg-container">
                <div class="index-msg-metadata">
                    <p class="msg-user"><%= msg.username %></p>
                    <p class="msg-added"><%= msg.date %></p>
                </div>
                <p class="msg-text"><%= msg.body %></p>

                <button class="open-msg">
                    <a  class="open-msg-link" 
                        href="/messages/<%= msg.id %>">Open</a>
                </button>
            </div>
        <% }) %>
    </div>
</body>
</html>